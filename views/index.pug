extends base

block content
    // Start your project here
    // Main Navigation
    header
        // Navbar
        nav.navbar.navbar-expand-lg.navbar-dark.fixed-top.scrolling-navbar
            .container
                // Navbar brand
                a.navbar-brand(href="#intro") FeMo
                // Collapse button
                button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                // Collapsible content
                #navbarContent.collapse.navbar-collapse
                    // Links
                    ul.navbar-nav.ml-auto.smooth-scroll
                        li.nav-item
                            a.nav-link(href="#intro")
                                i.fas.fa-home
                                |  Home
                        li.nav-item
                            a.nav-link(href="#feature-1")
                                i.far.fa-star
                                |  Features
                        li.nav-item
                            a.nav-link(href="#gallery")
                                i.far.fa-images
                                |  Gallery
                        li.nav-item
                            a.nav-link
                                i.far.fa-question-circle
                                |  FAQ
                        li.nav-item
                            a.nav-link(href="#contact")
                                i.far.fa-envelope
                                |  Contact
                        li.nav-item
                            a.nav-link(data-toggle="modal" data-target="#modalLRForm")
                                i.fas.fa-user
                                |  Sign in / Sign up
                // Collapsible content
        // /.Navbar
        // Mask
        #intro.view
            .mask.rgba-black-strong
                .container-fluid.d-flex.align-items-center.justify-content-center.h-100
                    .row.d-flex.justify-content-center.text-center
                        .col-md-10
                            // Heading
                            h2.display-4.font-weight-bold.white-text.pt-5.mb-2 Family Memories
                            // Divider
                            hr.hr-light
                            // Description
                            h4.white-text.my-4
                                | Bring your family history to life.
                                | Record, preserve and share precious family moments.
                            button.btn.btn-dark-green.btn-rounded.waves-effect(type="button") Get Started
        // /.Mask
    // Main Navigation
    // Main layout
    main.mt-5
        .container
            // Section: Feature-1
            section#feature-1.py-5.wow.fadeInUp
                // Container
                .container
                    // Section heading
                    h1.h1-responsive.font-weight-bold.text-center.mb-2 Features
                    // Section description
                    p.grey-text.text-center.w-responsive.mx-auto.mb-5
                        | Here will we give high level description of the features and what we
                        | can achieve with them. MAY NEED TO MAKE IMAGES NARROWER
                    // Grid row
                    .row
                        // Grid column
                        .col-md-7.mb-4
                            .view.overlay.z-depth-1-half
                                img.card-img-top(src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg" alt="")
                                .mask.rgba-white-light
                        // Grid column
                        // Grid column
                        .col-md-5.mb-4.align-self-center
                            h2 Upload and share family photos and artifacts
                            hr
                            p Pictures of old artifacts in photos. We can better record family moments.
                        // Grid column
                    // Grid row
                    // Grid row
                    .row
                        // Grid column
                        .col-md-7.mb-4.order-md-2
                            .view.overlay.z-depth-1-half
                                img.card-img-top(src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg" alt="")
                                .mask.rgba-white-light
                        // Grid column
                        // Grid column
                        .col-md-5.mb-4.align-self-center
                            h2 Timeline of family events
                            hr
                            p Picture showing a timeline of family events.
                        // Grid column
                    // Grid row
                    // Grid row
                    .row
                        // Grid column
                        .col-md-7.mb-4
                            .view.overlay.z-depth-1-half
                                img.card-img-top(src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg" alt="")
                                .mask.rgba-white-light
                        // Grid column
                        // Grid column
                        .col-md-5.mb-4.align-self-center
                            h2 Grow your family trees
                            hr
                            p
                                | Picture showing a family tree. Connect with your family and relatives
                                | (first order, second order etc)
                        // Grid column
                    // Grid row
                // Container
            // Section: Feature-1
            hr.my-5
            // Section: Feature-2
            section#feature-2.text-center.py-5.wow.pulse
                // Heading
                h2.mb-2.font-weight-bold Why is it so great?
                // Description
                p.grey-text.text-center.w-responsive.mx-auto.mb-5
                    | Here we will explain what are the benefits of using our service.
                // Grid row
                .row
                    // Grid column
                    .col-md-4.mb-5
                        i.fa.fa-camera-retro.fa-4x.dark-grey-text
                        h4.my-4.font-weight-bold Experience
                        p.grey-text We can record stuff.
                    // Grid column
                    // Grid column
                    .col-md-4.mb-1
                        i.fa.fa-heart.fa-4x.pink-text
                        h4.my-4.font-weight-bold Happiness
                        p.grey-text We can better pull family together.
                    // Grid column
                    // Grid column
                    .col-md-4.mb-1
                        i.fa.fa-lock.fa-4x.purple-text
                        h4.my-4.font-weight-bold Private
                        p.grey-text
                            | Artifacts and family information are only ever shared with you
                            | and your family.
                    // Grid column
                // Grid row
            // Section: Feature-2
            hr.my-5
            // Section: Gallery
            section#gallery.py-5.wow.flipInX
                // Heading
                h1.h1-responsive.font-weight-bold.text-center.mb-5 Gallery
                // Grid row
                .row
                    // Grid column
                    .col-md-6.mb-4
                        // Carousel Wrapper
                        #galleryCarousel.carousel.slide.carousel-fade(data-ride="carousel")
                            // Indicators
                            ol.carousel-indicators
                                li.active(data-target="#galleryCarousel" data-slide-to="0")
                                li(data-target="#galleryCarousel" data-slide-to="1")
                                li(data-target="#galleryCarousel" data-slide-to="2")
                            // /.Indicators
                            // Slides
                            .carousel-inner(role="listbox")
                                .carousel-item.active
                                    .view
                                        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(68).jpg" alt="First slide")
                                        .mask.rgba-black-light
                                    .carousel-caption
                                        h3.h3-responsive Feature 1
                                        p Here we will describe the feature.
                                .carousel-item
                                    // Mask color
                                    .view
                                        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(6).jpg" alt="Second slide")
                                        .mask.rgba-black-strong
                                    .carousel-caption
                                        h3.h3-responsive Feature 2
                                        p Here we will describe the feature.
                                .carousel-item
                                    // Mask color
                                    .view
                                        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(9).jpg" alt="Third slide")
                                        .mask.rgba-black-slight
                                    .carousel-caption
                                        h3.h3-responsive Feature 3
                                        p Here we will describe the feature.
                            // /.Slides
                            // Controls
                            a.carousel-control-prev(href="#galleryCarousel" role="button" data-slide="prev")
                                span.carousel-control-prev-icon(aria-hidden="true")
                                span.sr-only Previous
                            a.carousel-control-next(href="#galleryCarousel" role="button" data-slide="next")
                                span.carousel-control-next-icon(aria-hidden="true")
                                span.sr-only Next
                            // /.Controls
                        // /.Carousel Wrapper
                    // Grid column
                    // Grid column
                    .col-md-6
                        // Excerpt
                        h6.pb-1.teal-text
                            i.fa.fa-heart
                            strong  Family
                        p
                            | Possibly some screenshot of artefacts, like and comment, timeline and family tree.
                            | (MAKE HEIGHT OF IMAGES LARGER)
                        p Consider using a carousel with captions for each image
                    // Grid column
                // Grid row
            // Section: Gallery
            hr.my-5
            // Section: Contact
            section#contact.py-5.wow.bounceIn
                .container
                    // Section heading
                    h1.h1-responsive.font-weight-bold.text-center.mb-2 Contact us
                    // Section description
                    p.grey-text.text-center.w-responsive.mx-auto.mb-5 Contact us if you have any questions.
                    // Grid row
                    .row.grey-text.card.py-4.flex-row
                        // Grid column
                        .col-md-8.mb-md-0.px-5
                            form
                                // Grid row
                                .row
                                    // Grid column
                                    .col-md-6
                                        .md-form.mb-0
                                            i.fa.fa-user.prefix
                                            input#contact-name.form-control(type="text")
                                            label(for="contact-name") Your name
                                    // Grid column
                                    // Grid column
                                    .col-md-6
                                        .md-form.mb-0
                                            i.fa.fa-envelope.prefix
                                            input#contact-email.form-control(type="text")
                                            label(for="contact-email") Your email
                                    // Grid column
                                // Grid row
                                // Grid row
                                .row
                                    // Grid column
                                    .col-md-12
                                        .md-form.mb-0
                                            i.fa.fa-tag.prefix
                                            input#contact-Subject.form-control(type="text")
                                            label(for="contact-Subject") Subject
                                    // Grid column
                                // Grid row
                                // Grid row
                                .row
                                    // Grid column
                                    .col-md-12
                                        .md-form
                                            i.fas.fa-angle-double-right.prefix
                                            textarea#contact-message.form-control.md-textarea.pt-2.pb-0(rows="2")
                                            label(for="contact-message") Your message
                                    // Grid column
                                // Grid row
                            .text-center.text-md-center
                                a.btn.btn-blue.btn-md Send
                        // Grid column
                        // Grid column
                        .col-md-4.text-center.px-5.my-4.border-left.d-flex.align-items-center
                            ul.list-unstyled.mb-0.mx-auto
                                li
                                    i.fas.fa-map-marker-alt.fa-lg.blue-grey-text
                                    p Melbourne, VIC 3010, AUS
                                li
                                    i.fa.fa-envelope.fa-lg.blue-grey-text
                                    p desert-eagles@example.com
                                // <li>
                                // <i class="fa fa-phone fa-2x blue-grey-text"></i>
                                // <p>+ 01 234 567 89</p>
                                // </li>
                        // Grid column
                    // Grid row
            // Section: Contact
    // Main layout
    br
    // Footer
    footer.page-footer.unique-color-dark.text-md-left.pt-4
        // Call to action
        .call-to-action.text-center.my-4
            ul.list-unstyled.list-inline
                li.list-inline-item
                    h5 Register for free
                li.list-inline-item
                    a.btn.btn-cyan(href="") Sign up!
        // /.Call to action
        hr
        // About the app
        .text-center.py-3.font-small
            a(href="#!") About FeMo
        // /About the app
    // /.Footer

    // auth modal
    include auth

